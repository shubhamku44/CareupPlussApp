<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome">


    <TextView
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="21dp"
        android:text="Welcome to Careup+ get Doctor Specialist and Advice of any Disease via this app."
        android:textAlignment="center"
        android:id="@+id/header"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/header1"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="72dp"
        android:text="LogIn or SignUp"
        android:textAlignment="center"
        android:textStyle="italic" />

    <EditText
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:inputType="phone"
        android:hint="  Email or Phone"
        android:background="@drawable/btn1"
        android:textStyle="italic"
        android:id="@+id/txtmail"/>

    <EditText
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="  Password"
        android:background="@drawable/btn1"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:id="@+id/txtpass"/>


    <Button
        android:id="@+id/login"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:layout_below="@id/txtpass"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="5dp"
        android:text="Login/Patient"
        android:textColor="@color/primary_text"
        android:background="@drawable/button"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp" />

    <Button
        android:id="@+id/patient"
        android:layout_width="155dp"
        android:layout_height="81dp"
        android:layout_below="@id/login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/pat" />
    <Button
        android:id="@+id/login2"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:layout_below="@id/login"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="5dp"
        android:text="Login/Doctor"
        android:background="@drawable/button"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp" />


    <Button
        android:id="@+id/doctor"
        android:layout_width="155dp"
        android:layout_height="81dp"
        android:layout_below="@id/patient"
        android:layout_alignEnd="@+id/txtmail"
        android:layout_alignRight="@+id/txtmail"
        android:layout_centerVertical="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="-86dp"
        android:layout_marginEnd="-7dp"
        android:layout_marginRight="-7dp"
        android:layout_toEndOf="@+id/patient"
        android:layout_toRightOf="@+id/patient"
        android:background="@drawable/doctor" />

    <TextView
        android:layout_width="328dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginBottom="6dp"
        android:text="Developer:- This App is Developed by Shubham "
        android:textSize="10dp"
        android:textStyle="italic" />



</RelativeLayout>