<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".finalpage"
    tools:showIn="@layout/app_bar_finalpage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:weightSum="2">

            <Button
                android:id="@+id/btnheart"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/heart"
                android:lineSpacingExtra="14sp"
                android:textColor="@color/design_default_color_primary_dark" />

            <Button
                android:id="@+id/btnkidney"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/kidney"
                android:lineSpacingExtra="14sp"
                android:textColor="@color/design_default_color_primary_dark"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnliver"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/liver"
                    android:lineSpacingExtra="14sp"
                    android:textColor="@color/design_default_color_primary_dark" />

                <Button
                    android:id="@+id/btncancer"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/cancer"
                    android:lineSpacingExtra="14sp"
                    android:textColor="@color/design_default_color_primary_dark"

                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:weightSum="2">

                <Button
                    android:id="@+id/btneyes"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/eyes"
                    android:lineSpacingExtra="14sp"
                    android:textColor="@color/design_default_color_primary_dark" />

                <Button
                    android:id="@+id/btnskin"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/skin"
                    android:lineSpacingExtra="14sp"
                    android:textColor="@color/design_default_color_primary_dark" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnnext"
                android:layout_width="399dp"
                android:layout_height="50dp"
                android:background="@drawable/next" />

        </RelativeLayout>
    </LinearLayout>


</ScrollView>